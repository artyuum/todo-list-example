{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ task.label }}</td>
            </tr>
            <tr>
                <th>Done</th>
                <td>{{ task.done ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('todo_list_show', {'id': todo_list.id}) }}">back to list</a>

    <a class="btn btn-secondary" href="{{ path('task_edit', {'id': task.id, 'list': todo_list.id}) }}">edit</a>

    {{ include('task/_delete_form.html.twig') }}
{% endblock %}
