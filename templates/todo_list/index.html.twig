{% extends 'base.html.twig' %}

{% block title %}TodoList index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col"><h1>Your todo list</h1></div>
        <div class="col-2 text-right"><a class="btn btn-outline-primary" href="{{ path('todo_list_new') }}">Add new todo list</a></div>
    </div>



    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo_list in todo_lists %}
            <tr>
                <td>{{ todo_list.id }}</td>
                <td>{{ todo_list.name }}</td>
                <td class="btn-group">
                    <a class="btn btn-info" href="{{ path('todo_list_show', {'id': todo_list.id}) }}">show</a>
                    <a class="btn btn-secondary" href="{{ path('todo_list_edit', {'id': todo_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
